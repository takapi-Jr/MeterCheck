<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeterCheck.Views.MainPage"
             Title="{Binding Title}">

    <!-- ツールバー -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="Info.png" Command="{Binding SettingCommand}" />
    </ContentPage.ToolbarItems>
    
    <Grid>
        <!--<CarouselView IsVisible="{Binding IsVisibleCarouselView.Value}" ItemsSource="{Binding MachineList.Value}" EmptyView="No machine data1.">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>-->

        <RefreshView IsRefreshing="{Binding IsRefleshing.Value}" Command="{Binding RefleshCommand}">
            <CollectionView IsVisible="{Binding IsVisibleCollectionView.Value}" ItemsSource="{Binding MachineList.Value}" SelectionMode="Single">
                <CollectionView.EmptyView>
                    <ContentView>
                        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                            <Label Text="No machine data2." Style="{StaticResource DefaultEmphasisLabelStyle}"/>
                        </StackLayout>
                    </ContentView>
                </CollectionView.EmptyView>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <!-- コンテキストメニュー -->
                            <SwipeView.RightItems>
                                <SwipeItems Mode="Reveal">
                                    <SwipeItem Text="Delete" IconImageSource="Delete.png" BackgroundColor="LightPink" Command="{Binding DeleteMachineCommand}" CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>

                                <Image Grid.Column="0" Grid.RowSpan="2" Source="icon.png" Aspect="AspectFit" HeightRequest="60" WidthRequest="60" />
                                <Grid Grid.Column="1" HorizontalOptions="StartAndExpand" VerticalOptions="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Label Grid.Row="0" Text="{Binding MachineName}" />
                                    <Label Grid.Row="1" Text="{Binding CurrentPrizeName}" LineBreakMode="WordWrap" />
                                </Grid>
                                <Label Grid.Column="2" Text="{Binding ControlId}" HorizontalOptions="End" />
                            </Grid>

                            <!--<StackLayout Orientation="Horizontal">
                                <Image Source="icon.png" Aspect="AspectFit" HorizontalOptions="Start" VerticalOptions="Center" />
                                <Grid RowDefinitions="Auto, Auto" HorizontalOptions="StartAndExpand" VerticalOptions="Center">
                                    <Label Text="Machine.MachineName" />
                                    <Label Text="Machine.CurrentPrizeName" />
                                </Grid>
                                <Label Text="Machine.ControlId" HorizontalOptions="End" VerticalOptions="Center" />
                            </StackLayout>-->
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- 右下ボタン -->
        <AbsoluteLayout>
            <ImageButton Source="Exchange.png" Padding="5" CornerRadius="25" Command="{Binding ChangeViewCommand}" BackgroundColor="#00A5F2"
                         AbsoluteLayout.LayoutFlags="PositionProportional" 
                         AbsoluteLayout.LayoutBounds=".75, .95, 52, 52" />
            <ImageButton Source="Add.png" Padding="5" CornerRadius="25" Command="{Binding AddMachineCommand}" BackgroundColor="#00A5F2"
                         AbsoluteLayout.LayoutFlags="PositionProportional" 
                         AbsoluteLayout.LayoutBounds=".95, .95, 52, 52" />
        </AbsoluteLayout>
    </Grid>

</ContentPage>